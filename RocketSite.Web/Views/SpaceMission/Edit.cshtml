@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.SpaceMission
@using RocketSite.Common.Options
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Edit Employee</h2>
    <form asp-action="Edit" asp-controller="SpaceMission">
        <div>
            <div class="form-group">
                <input type="text" name="First" value="@Model.Name" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control  form-control-sm"
                        asp-items="Html.GetEnumSelectList<StatusOption>()">
                    <option>Select status ...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Altitude"></label>
                <input asp-for="Altitude" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Rocket.Name"></label>
                <input asp-for="Rocket.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Rocket.Version"></label>
                <input asp-for="Rocket.Version" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cosmodrome.Name"></label>
                <input asp-for="Cosmodrome.Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="SpaceMission" asp-action="Index">Back to list</a>
    </div>
</div>