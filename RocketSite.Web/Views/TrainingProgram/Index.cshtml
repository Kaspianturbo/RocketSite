@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<RocketSite.Common.Models.TrainingProgram>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Training Program</h2>
    <p>
        <a asp-controller="TrainingProgram" asp-action="Create">Create</a>
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Area</th>
            <th>Coach</th>
            <th>Cost</th>
            <th>Duration</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @item.Area
                </td>
                <td>
                    @item.Coach
                </td>
                <td>
                    @item.Cost
                </td>
                <td>
                    @item.Duration
                </td>
                <td>
                    <a asp-controller="TrainingProgram" asp-action="Edit" asp-route-name="@item.Name" asp-route-coach="@item.Coach">Edit</a> |
                    <a asp-controller="TrainingProgram" asp-action="Delete" asp-route-name="@item.Name" asp-route-coach="@item.Coach">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>