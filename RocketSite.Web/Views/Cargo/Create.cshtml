@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using RocketSite.Common.Options
@using RocketSite.Common.Repositories
@inject RocketSite.Common.Repositories.CustomerRepository CustomerRepository
@model RocketSite.Common.Models.Cargo

<div class="container">
    <h2>Create Cargo</h2>

    <form asp-action="Create" asp-controller="Cargo" method="post">
        <div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control  form-control-sm"
                        asp-items="Html.GetEnumSelectList<CargoOption>()">
                    <option>Select type ...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Emaunt"></label>
                <input asp-for="Emaunt" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <select asp-for="Customer.Name" class="form-control  form-control-sm"
                        asp-items="new List<SelectListItem>()">
                    <option>Select type ...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <input asp-for="Customer.Name" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Country"></label>
                <input asp-for="Customer.Country" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="SpaceMission.Name"></label>
                <input asp-for="SpaceMission.Name" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Cargo" asp-action="Index">Back to list</a>
    </div>
</div>