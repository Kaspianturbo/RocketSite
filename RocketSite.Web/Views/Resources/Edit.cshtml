@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using RocketSite.Common.Options
@model RocketSite.Common.Models.Resources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Edit Resources</h2>

    <form asp-action="Edit" asp-controller="Resources">
        <div>
            <div class="form-group">
                <input type="text" name="First" value="@Model.Name" class="form-control" hidden />
                <input type="text" name="Second" value="@Model.Type" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control  form-control-sm"
                        asp-items="Html.GetEnumSelectList<ResourceOption>()">
                    <option>Select type ...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Emaunt"></label>
                <input asp-for="Emaunt" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SpaceMission.Name"></label>
                <input asp-for="SpaceMission.Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>
    <div>
        <a asp-controller="Resources" asp-action="Index">Back to list</a>
    </div>
</div>