@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Edit Customer</h2>

    <form asp-action="Edit" asp-controller="Customer">
        <div>
            <div class="form-group">
                <input type="text" name="First" value="@Model.Name" class="form-control" hidden />
                <input type="text" name="Second" value="@Model.Country" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TotalWorth"></label>
                <input asp-for="TotalWorth" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Customer" asp-action="Index">Back to list</a>
    </div>
</div>