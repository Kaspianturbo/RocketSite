@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Create Customer</h2>

    <form asp-action="Create" asp-controller="Customer" method="post">
        <div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="TotalWorth"></label>
                <input asp-for="TotalWorth" class="form-control  form-control-sm" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Customer" asp-action="Index">Вернуться к списку</a>
    </div>
</div>
