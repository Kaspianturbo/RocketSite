@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<RocketSite.Common.Models.Cosmodrome>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Cosmodrome</h2>

    <p>
        <a asp-action="Create">Create</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Timezone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location.Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location.Longitude)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Timezone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Longitude)
                    </td>
                    <td>
                        <a asp-controller="Cosmodrome" asp-action="Edit" asp-route-name="@item.Name">Edit</a> |
                        <a asp-controller="Cosmodrome" asp-action="Delete" asp-route-name="@item.Name">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>