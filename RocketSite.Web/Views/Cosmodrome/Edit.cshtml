@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.Cosmodrome
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Edit Cosmodrome</h2>
    <form asp-action="Edit" asp-controller="Cosmodrome">
        <div>
            <div class="form-group">
                <input type="text" name="First" value="@Model.Name" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Timezone"></label>
                <input asp-for="Timezone" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>
    <div>
        <a asp-controller="Cosmodrome" asp-action="Index">Back to list</a>
    </div>
</div>