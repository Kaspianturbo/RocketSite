@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.Cosmodrome
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Create Equipment</h2>

    <form asp-action="Create" asp-controller="Cosmodrome" method="post">
        <div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Timezone"></label>
                <input asp-for="Timezone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location.Latitude"></label>
                <input asp-for="Location.Latitude" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location.Longitude"></label>
                <input asp-for="Location.Longitude" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Cosmodrome" asp-action="Index">Back to list</a>
    </div>
</div>