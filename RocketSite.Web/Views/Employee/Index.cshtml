@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<RocketSite.Common.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Employee</h2>

    <p>
        <a asp-action="Create">Create</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Education)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profession)
                </th>
                <th>
                    Program @Html.DisplayNameFor(model => model.TrainingProgram.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrainingProgram.Coach)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Education)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profession)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrainingProgram.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrainingProgram.Coach)
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-name="@item.Name" asp-route-country="@item.Country">Edit</a> |
                        <a asp-controller="Employee" asp-action="Delete" asp-route-name="@item.Name" asp-route-country="@item.Country">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>