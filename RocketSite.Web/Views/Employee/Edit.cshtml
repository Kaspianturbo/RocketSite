@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RocketSite.Common.Models.Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Edit Employee</h2>
    <form asp-action="Edit" asp-controller="Employee">
        <div>
            <div class="form-group">
                <input type="text" name="First" value="@Model.Name" class="form-control" hidden />
                <input type="text" name="Second" value="@Model.Country" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Education"></label>
                <input asp-for="Education" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sex"></label>
                <input asp-for="Sex" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Profession"></label>
                <input asp-for="Profession" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Employee" asp-action="Index">Back to list</a>
    </div>
</div>